<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="root" prefHeight="720.0" prefWidth="1280.0" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.teamR.controllers.RootController">
   <left>
      <HBox fx:id="rootHbox" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="sidebar" alignment="CENTER" prefWidth="75.0" style="-fx-background-color: #012D5A;" HBox.hgrow="ALWAYS">
               <children>
                  <VBox fx:id="bwhHome" alignment="CENTER" prefHeight="80.0" prefWidth="75.0" styleClass="sidebar-vbox" VBox.vgrow="ALWAYS">
                     <children>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
                           <image>
                              <Image url="@../images/sidebar/bwhlogo.png" />
                           </image>
                        </ImageView>
                     </children>
                  </VBox>
                  <VBox fx:id="profileButton" alignment="CENTER" prefHeight="80.0" prefWidth="75.0" styleClass="sidebar-vbox" VBox.vgrow="ALWAYS">
                     <children>
                        <StackPane>
                           <children>
                              <ImageView fx:id="profileIcon" fitHeight="42.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../images/sidebar/defaultpfp.png" />
                                 </image>
                                 <clip>
                                    <Circle centerX="21" centerY="21" radius="21" />
                                 </clip>
                              </ImageView>
                              <Circle fx:id="circle" fill="TRANSPARENT" radius="21" stroke="WHITE" strokeWidth="3" />
                           </children>
                        </StackPane>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: Roboto;" text="Profile" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
                  <VBox fx:id="newRequestButton" alignment="CENTER" prefHeight="80.0" prefWidth="75.0" styleClass="sidebar-vbox" VBox.vgrow="ALWAYS">
                     <children>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
                           <image>
                              <Image url="@../images/sidebar/new_sr.png" />
                           </image>
                        </ImageView>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: Roboto;" text="New" VBox.vgrow="ALWAYS" />
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: Roboto;" text="Service" VBox.vgrow="ALWAYS" />
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: Roboto;" text="Request" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
                  <VBox fx:id="signagePageButton" alignment="CENTER" prefHeight="80.0" prefWidth="75.0" styleClass="sidebar-vbox" VBox.vgrow="ALWAYS">
                     <children>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
                           <image>
                              <Image url="@../images/sidebar/Signage.png" />
                           </image>
                        </ImageView>
                        <Text fx:id="signageText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Signage" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
                  <VBox fx:id="pathfindingButton" alignment="CENTER" prefHeight="80.0" prefWidth="75.0" styleClass="sidebar-vbox" VBox.vgrow="ALWAYS">
                     <children>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
                           <image>
                              <Image url="@../images/sidebar/map.png" />
                           </image>
                        </ImageView>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: Roboto;" text="Pathfinding" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
                  <VBox fx:id="helpButton" alignment="CENTER" prefHeight="80.0" prefWidth="75.0" styleClass="sidebar-vbox" VBox.vgrow="ALWAYS">
                     <children>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
                           <image>
                              <Image url="@../images/sidebar/help.png" />
                           </image>
                        </ImageView>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: Roboto;" text="Help" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
                  <VBox fx:id="logoutButton" alignment="CENTER" prefHeight="80.0" prefWidth="75.0" styleClass="sidebar-vbox" VBox.vgrow="ALWAYS">
                     <children>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
                           <image>
                              <Image url="@../images/sidebar/logout.png" />
                           </image>
                        </ImageView>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: Roboto;" text="Logout" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
                  <VBox fx:id="exitButton" alignment="CENTER" prefHeight="80.0" prefWidth="75.0" styleClass="sidebar-vbox" VBox.vgrow="ALWAYS">
                     <children>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
                           <image>
                              <Image url="@../images/sidebar/exit.png" />
                           </image>
                        </ImageView>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: Roboto;" text="Exit" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </left>
</BorderPane>
